function ativarTela(id) {
    var attributes = jQuery("#ddr_cand"+id).data();
    const valores = Object.getOwnPropertyNames(attributes);
    wbase = "";
    for (i=0;i<valores.length;i++) {
        wcol = valores[i];
        if (wcol == "baseurl") {
            wbase = jQuery("#ddr_cand"+id).data(wcol);
        }
    }
    for (i=0;i<valores.length;i++) {
        wcol = valores[i];
        if (wcol != "baseurl") {
            wval = jQuery("#ddr_cand"+id).data(wcol);
            jQuery('#tela2-'+wcol).text(wval);
            if (jQuery('#tela2-'+wcol).prop("tagName").toLowerCase() == "a") {
                jQuery('#tela2-'+wcol).prop("href", wbase+wval)
            }
        }
    }
    jQuery( "#ddr_form_lista" ).addClass( "ddr_form_invisivel" );
    jQuery( "#ddr_form_detalhe" ).removeClass( "ddr_form_invisivel" );
}

function desativarTela() {
    jQuery( "#ddr_form_detalhe" ).addClass( "ddr_form_invisivel" );
    jQuery( "#ddr_form_lista" ).removeClass( "ddr_form_invisivel" );
}

function mudarSelect(pfield) {
    //alert(jQuery("#dr_w_sf_select").val());
    //var attributes = jQuery("#dr_w_sf_download").data();
    //const valores = Object.getOwnPropertyNames(attributes);
    wbase = jQuery("#dr_w_sf_download").data("baseurl");
    if (jQuery("#dr_w_sf_select").val() == "Todos") {
        jQuery( ".ddr_form_candidato" ).removeClass( "ddr_form_invisivel" );
        jQuery( "#dr_w_sf_inscritos" ).removeClass( "ddr_form_invisivel" );
        jQuery( "#dr_w_sf_parcial" ).addClass( "ddr_form_invisivel" );
        jQuery(".ddr_cor1").removeClass("ddr_cor1");
        jQuery(".ddr_cor2").removeClass("ddr_cor2");
        jQuery(".ddr_cor11").addClass("ddr_cor1");
        jQuery(".ddr_cor22").addClass("ddr_cor2");
        jQuery('#dr_w_sf_download').prop("href", wbase+'&select=Todos');
    } else {
        var wnum = 0;
        jQuery( ".ddr_form_candidato" ).addClass( "ddr_form_invisivel" );
        jQuery(".ddr_cor1").removeClass("ddr_cor1");
        jQuery(".ddr_cor2").removeClass("ddr_cor2");
        jQuery( ".ddr_form_candidato" ).each(function( index ) {
            //var attributes = jQuery( this ).data();
            //var valores = Object.getOwnPropertyNames(attributes);
            if (jQuery( this ).data(pfield) == jQuery("#dr_w_sf_select").val()) {
                jQuery( this ).removeClass( "ddr_form_invisivel" );
                wnum = wnum + 1;
                if (wnum % 2 == 0) {
                    jQuery( this ).addClass("ddr_cor2");
                } else {
                    jQuery( this ).addClass("ddr_cor1");
                }
            }
        });
        jQuery( "#dr_w_sf_parcial" ).text(wnum);
        jQuery( "#dr_w_sf_inscritos" ).addClass( "ddr_form_invisivel" );
        jQuery( "#dr_w_sf_parcial" ).removeClass( "ddr_form_invisivel" );
        jQuery('#dr_w_sf_download').prop("href", wbase+'&select='+jQuery("#dr_w_sf_select").val());
    }
}

function ativarTelaDownload() {
    jQuery( "#ddr_form_lista" ).addClass( "ddr_form_invisivel" ); 
    jQuery( "#ddr_form_download" ).removeClass( "ddr_form_invisivel" );  
    jQuery( "#ddr_form_exportar" ).text("Exportar " + jQuery("#dr_w_sf_select").val());
}

function cancelarDownload() {
    jQuery( "#ddr_form_download" ).addClass( "ddr_form_invisivel" ); 
    jQuery( "#ddr_form_lista" ).removeClass( "ddr_form_invisivel" ); 
}

