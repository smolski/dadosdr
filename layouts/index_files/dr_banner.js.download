function drb_slider(drb_images) {
 
    var root = document.getElementById("dr_banner_template");
  
    function appendContainer() {
      var container = document.createElement("div");
      container.className = "drb_container";
  
      root.appendChild(container);

      return container;
    }

    var container = appendContainer();
    var awesomeSlider = new AwesomeSlider(drb_images, container, {
          manual: manual()
        });

}

function manual() {
    var previous = document.createElement("div");
    previous.className = "drb_manual-btn drb_manual-previous";
  
    var next = document.createElement("div");
    next.className = "drb_manual-btn drb_manual-next";
  
    return {
      previous: previous,
      next: next
    };
}